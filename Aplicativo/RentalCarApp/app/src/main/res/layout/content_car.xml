<android.support.v7.widget.CardView
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/item_card"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    card_view:cardCornerRadius="4dp"
    android:layout_margin="5dp"
    android:clickable="false">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:id="@+id/internal_item_layout">

        <ImageView
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:id="@+id/pictureImageView"
            android:layout_marginLeft="1dp"
            android:layout_marginRight="1dp"
            android:src="@mipmap/ic_car_001"
            android:layout_gravity="center_horizontal"
            android:layout_above="@+id/nameTextView"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="56dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Toyota - Yaris"
            android:id="@+id/nameTextView"
            android:gravity="center_horizontal"
            android:layout_gravity="center_horizontal"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:textStyle="bold"/>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New Text"
            android:id="@+id/descriptionTextView"
            android:gravity="center_horizontal"
            android:layout_below="@+id/nameTextView"
            android:layout_marginTop="20dp"
            android:layout_gravity="center_horizontal"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"/>
        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Reservar"
            android:id="@+id/reservationButton"
            android:layout_marginTop="70dp"
            android:layout_below="@+id/descriptionTextView"
            android:layout_toStartOf="@+id/nameTextView"
            android:contextClickable="false" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Regresar"
            android:id="@+id/backButton"
            android:layout_alignTop="@+id/reservationButton"
            android:layout_toEndOf="@+id/nameTextView" />

    </RelativeLayout>

</android.support.v7.widget.CardView>
